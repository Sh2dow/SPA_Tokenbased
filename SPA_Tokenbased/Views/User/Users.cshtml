
<div ng-controller="userController" ng-cloak>
    <div class="col-lg-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="form-group">
                    <b>User Management</b>
                    <a style="float:right;" class="btn btn-light btn-xs" data-toggle="modal" data-target="#myAddModal">
                        Add User<span class="fa fa-plus-circle fa-fw"></span>
                    </a>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div style="overflow-x:auto;min-height:100px;" class="col-sm-12">
                        <table class="table table-bordered table-hover table-striped">
                            <thead>
                                <tr>
                                    <th class="col-xs-1">#</th>
                                    <th class="col-xs-2">User</th>
                                    <th class="col-xs-2">Role</th>
                                    <th class="col-xs-2">Worked</th>
                                    <th class="col-xs-2">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="user in Users">
                                    <td ng-bind="$index+1"></td>
                                    <td ng-bind="user.fullname"></td>
                                    <td ng-bind="user.roleName"></td>
                                    <td>{{user.totalHours}} <b>h</b></td>
                                    <td>
                                        <p>
                                            <a class="button-width btn btn-xs btn-success" data-toggle="modal" data-target="#trackingModal" ng-click="ViewTracking(user)">View</a>
                                            <a class="button-width btn btn-xs btn-primary" data-toggle="modal" data-target="#myviewModal" ng-click="ViewUser(user)" style="color:white;">Info</a>
                                            <a class="button-width btn btn-xs btn-info" data-toggle="modal" data-target="#myModal" ng-click="GetRoles(user)" style="cursor:pointer;text-decoration:none;">Roles</a>
                                            <a class="button-width btn btn-xs btn-danger" ng-click="DeleteUser(user.id)">Delete</a>
                                        </p>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section id="popup">

        @Html.Partial("ViewTrackingModal")

        @Html.Partial("ViewUserModal")

        @Html.Partial("ManageRolesModal")

        @Html.Partial("AddUserModal")

    </section>
</div>
