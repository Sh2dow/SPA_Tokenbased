<div ng-controller="timeController">
        <br /><br />
        <div class="panel panel-info">
            <div class="panel-heading">
                <h2>Time tracking</h2>
            </div>
            <div class="panel-body">
                <form>
                    <div class="form-group">
                        <h4 style="margin-top: 10px!important;margin-bottom: 10px!important;"><small>Start time</small></h4>

                        <input type="datetime-local" ng-model="time.start" class="form-control" date-input />
                    </div>
                    <div class="form-group">
                        <h4 style="margin-top: 10px!important;margin-bottom: 10px!important;"><small>End time</small></h4>

                        <input type="datetime-local" ng-model="time.end" class="form-control"  date-input />
                    </div>
                    <div class="form-group">
                        <input type="submit" ng-click="trackTime()" value="Track the time" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
</div>
