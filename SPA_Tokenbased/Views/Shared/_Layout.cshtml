<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="app">
    <div class="container">
        <nav class="navbar fixed-top navbar-expand navbar-light ">
            <div class="container bg-secondary" id="navlinks" ng-controller="loginController">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nav-content" aria-controls="nav-content" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @if (Request.IsAuthenticated)
                {
                    <ul class="nav nav-pills flex-column flex-sm-row">
                        <li class="nav-item"><a class="bg-secondary text-light nav-link" ui-sref="user.dashboard">Dashboard</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="bg-secondary text-light nav-link" ui-sref="user.users">Users</a></li>
                            <li class="nav-item"><a class="bg-secondary text-light nav-link" ui-sref="user.roles">Roles</a></li>

                        }
                    </ul>

                        <ul class="nav nav-pills flex-column flex-sm-row">
                            <li class="nav-item">
                                <button class="bg-secondary text-light border-0 nav-link" data-ng-click="Logout()">Log off</button>
                            </li>
                        </ul>
                }
                else
                {
                    <ul class="nav nav-pills flex-column flex-sm-row">
                        <li class="nav-item"><a class="bg-secondary text-warning nav-link" ui-sref="home.signup">Sign up</a></li>
                        <li class="nav-item"><a class="bg-secondary text-success nav-link" ui-sref="home.login">Login</a></li>
                    </ul>
                }
            </div>
        </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="footer fixed-bottom">
        <div class="container bg-secondary text-light">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/angular/plugins")

    <script src="~/Scripts/app/appModule.js"></script>
    <script src="~/Scripts/app/directives/directives.js"></script>
    <script src="~/Scripts/app/routes.js"></script>
    <script src="~/Scripts/app/services/loginservice.js"></script>
    <script src="~/Scripts/app/services/authService.js"></script>
    <script src="~/Scripts/app/services/signupService.js"></script>
    <script src="~/Scripts/app/services/userService.js"></script>
    <script src="~/Scripts/app/services/manageTimeService.js"></script>
    <script src="~/Scripts/app/services/manageUserRoleService.js"></script>
    <script src="~/Scripts/app/services/manageRoleService.js"></script>
    <script src="~/Scripts/app/controllers/loginController.js"></script>
    <script src="~/Scripts/app/controllers/signupController.js"></script>
    <script src="~/Scripts/app/controllers/userController.js"></script>
    <script src="~/Scripts/app/controllers/roleController.js"></script>
    <script src="~/Scripts/app/controllers/dashboardController.js"></script>
    <script src="~/Scripts/app/controllers/timeController.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
