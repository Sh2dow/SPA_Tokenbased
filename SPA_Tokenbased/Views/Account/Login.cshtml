
<div ng-controller="loginController" class="centre">
    <div class="form_Main">
        <!-- EMAIL -->
        <div class="form-group">
            <label>Email address</label>
            <input type="email" name="email" class="form-control" ng-model="loginData.userName">
            <p ng-show="userForm.userName.$invalid && !userForm.userName.$pristine" class="help-block">Enter a valid email.</p>
        </div>

        <!-- PASSWORD -->
        <div class="form-group">
            <label>Password</label>
            <input type="password" name="password" class="form-control" ng-model="loginData.password">
            <p ng-show="userForm.password.$invalid && !userForm.password.$pristine" class="help-block">Enter a valid email.</p>
        </div>

        <div class="form-group">
            <div style="padding-top:10px;">
                <input ng-click="Login()" ng-disabled="userForm.$invalid || isProcessing"
                       type="button" class="btn btn-block btn-success"
                       value="{{LoginBtnText}}" />
            </div>
        </div>
        <p class="footer_para">
            <a ui-sref="signup" style="float:left">Create an account</a>
            Forgot Password?
            <a ui-sref="forgotPassword">Click here</a>.
        </p>
    </div>
</div>
